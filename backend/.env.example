# AI-Backed Community Legal Aid Assistant - Environment Configuration

# Application Settings
APP_NAME="AI-Backed Community Legal Aid Assistant"
APP_VERSION="1.0.0"
DEBUG=false

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Settings
DATABASE_URL=sqlite:///./legal_aid.db

# OpenAI Settings (for cloud-based LLM)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Local LLM Settings (alternative to OpenAI)
USE_LOCAL_LLM=false
LOCAL_LLM_URL=http://localhost:8080/generate

# Security Settings
SECRET_KEY=your-secret-key-change-in-production-please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# PDF Generation
PDF_OUTPUT_DIR=./generated_documents

# Legal Resources
DEFAULT_JURISDICTION=US
ENABLE_RESOURCE_LOOKUP=true

